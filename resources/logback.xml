<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- ConsoleAppender will log code directly to console -->
        <encoder>
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg %n
            </Pattern>
        </encoder>
    </appender>

    <logger name="vrptwfl.metaheuristic.functionalityChecks" level="debug" /> <!-- "debug", "info", "error"-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>